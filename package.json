{
    "name": "evolution",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint && biome lint ./src ./app ./tests",
        "lint-fix": "next lint && biome lint --apply ./src ./app ./tests",
        "lint-fix-unsafe": "next lint && biome lint --apply-unsafe ./src ./app ./tests",
        "format": "biome format --write ./src ./app ./tests",
        "test": "playwright test",
        "test-ui": "playwright test --ui"
    },
    "pre-commit": [
        "lint-fix",
        "format"
    ],
    "dependencies": {
        "accept-language": "^3.0.18",
        "dotenv": "^16.3.1",
        "i18next": "^23.7.20",
        "i18next-browser-languagedetector": "^7.2.0",
        "i18next-resources-to-backend": "^1.2.0",
        "mongodb": "^6.3.0",
        "next": "14.0.4",
        "pusher": "^5.2.0",
        "pusher-js": "^8.4.0-rc2",
        "react": "^18",
        "react-cookie": "^7.0.2",
        "react-dom": "^18",
        "react-i18next": "^14.0.1",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@biomejs/biome": "1.5.3",
        "@playwright/test": "^1.40.1",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",
        "@types/uuid": "^9.0.7",
        "autoprefixer": "^10.0.1",
        "eslint": "^8",
        "eslint-config-next": "14.0.4",
        "postcss": "^8",
        "pre-commit": "^1.2.2",
        "prettier": "3.1.1",
        "tailwindcss": "^3.4.1",
        "typescript": "^5"
    }
}
